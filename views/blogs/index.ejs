<html lang="en">
  <head>
    <%- include('../partials/head.ejs') %>
  </head>
  <body>
    <%- include('../partials/nav.ejs') %>

    <div class="website content">
      <h2>Blog Archive</h2>

      <% if (blogs.length > 0) { %>
        <div class="blogs">
          <% blogs.forEach(blog => { %>
            <div class="blog-card">
              <a class="single" href="/blogs/<%= blog.id %>">
                <h3 class="title"><%= blog.title %></h3>
                <p class="timestamp"><%= blog.createdAt.toDateString() %></p>
              </a>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <h3 class="title">No items in archive</h3>
      <% } %>
    </div>

    <%- include('../partials/footer.ejs') %>
  </body>
</html>
